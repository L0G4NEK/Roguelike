{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/signup",
        "destination": "./signup.html",
        "type": 301
      },
      {
        "source": "/index",
        "destination": "./index.html",
        "type":  301
      },
      {
        "source": "/mainpage",
        "destination": "./mainpage.html",
        "type":  301
      },
      {
        "source": "/game",
        "destination": "./game.html",
        "type":  301
      }
    ]
  }
}
